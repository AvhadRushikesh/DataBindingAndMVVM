<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:DataBindingPractice.MVVM.Converters"
             x:Class="DataBindingPractice.MVVM.Views.ConverterView"
             Title="ConverterView">

    <ContentPage.Resources>
        <converter:BoolConverter x:Key="boolConverter" />
    </ContentPage.Resources>
    
    <HorizontalStackLayout 
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Entry 
            Placeholder="{Binding data.Married, Converter={StaticResource boolConverter}}"/>
        <Label 
            Text="Married?" />
    </HorizontalStackLayout>
    
</ContentPage>